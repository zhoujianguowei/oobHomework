<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>adriftbook.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>adriftbook.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetPost</servlet-name>
        <servlet-class>adriftbook.servlet.GetPostsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetPostDetail</servlet-name>
        <servlet-class>adriftbook.servlet.GetPostDetailServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DoComment</servlet-name>
        <servlet-class>adriftbook.servlet.DoCommentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadFile</servlet-name>
        <servlet-class>adriftbook.servlet.UploadFileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetPost</servlet-name>
        <url-pattern>/get_post</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetPostDetail</servlet-name>
        <url-pattern>/get_post_detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DoComment</servlet-name>
        <url-pattern>/comment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadFile</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>
</web-app>