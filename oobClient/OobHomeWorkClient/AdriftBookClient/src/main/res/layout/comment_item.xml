<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/comment_item_background"
                android:padding="8dp">

    <TextView
        android:id="@+id/comment_item_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="评论内容"
        android:textColor="@color/shallow_blue"
        android:textSize="@dimen/little"/>

    <TextView
        android:id="@+id/comment_item_comment_user_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/comment_item_comment_content"
        android:layout_marginRight="20dp"
        android:text="作者日期"
        android:textColor="@color/gray"/>
</RelativeLayout>