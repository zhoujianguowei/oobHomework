<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.example.adriftbookclient.oobhomeworkclient.LoginActivity">

    <TextView
        android:id="@+id/fragment_register_user_name_tv"
        style="@style/commen_textview_style"
        android:layout_above="@+id/fragment_register_password_tv"
        android:text="用户名"
        android:textSize="@dimen/large"/>

    <EditText
        android:id="@+id/fragment_register_user_name_et"
        style="@style/common_edittext_style"
        android:layout_alignBottom="@+id/fragment_register_user_name_tv"
        android:layout_alignLeft="@+id/fragment_register_verify_password_ev"
        android:layout_toRightOf="@+id/fragment_register_user_name_tv"
        android:hint="用户名至少为两个字符"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/fragment_register_password_tv"
        style="@style/commen_textview_style"
        android:layout_above="@+id/fragment_register_verify_password_tv"
        android:text="密&#160;&#160;码"/>

    <EditText
        android:id="@+id/fragment_register_password_et"
        style="@style/common_edittext_style"
        android:layout_alignBottom="@+id/fragment_register_password_tv"
        android:layout_alignLeft="@+id/fragment_register_verify_password_ev"
        android:layout_toRightOf="@+id/fragment_register_password_tv"
        android:hint="密码长度为6~16位"
        android:inputType="textPassword"
        />

    <TextView
        android:id="@+id/fragment_register_verify_password_tv"
        style="@style/commen_textview_style"
        android:layout_centerVertical="true"
        android:text="确认密码"/>

    <EditText
        android:id="@+id/fragment_register_verify_password_ev"
        style="@style/common_edittext_style"
        android:hint="重新输入密码"
        android:layout_alignBottom="@+id/fragment_register_verify_password_tv"
        android:layout_toRightOf="@+id/fragment_register_verify_password_tv"
        android:inputType="textPassword"
        android:singleLine="true"/>


    <Button
        android:id="@+id/fragment_register_register_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_register_verify_password_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/fragment_login"
        android:text="注册"
        android:textSize="@dimen/xx_large"
        />


</RelativeLayout>
