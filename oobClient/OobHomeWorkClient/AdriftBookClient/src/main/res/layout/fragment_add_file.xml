<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fragment_add_file_author_tv"
            style="@style/commen_textview_style"
            android:text="图书作者"/>

        <EditText
            android:id="@+id/fragment_add_file_author_et"
            style="@style/common_edittext_nohint_style"
            android:layout_alignTop="@+id/fragment_add_file_author_tv"
            android:layout_toRightOf="@+id/fragment_add_file_author_tv"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fragment_add_file_file_name_tv"
            style="@style/commen_textview_style"
            android:text="图书名称"/>

        <EditText
            android:id="@+id/fragment_add_file_file_name_et"
            style="@style/common_edittext_nohint_style"
            android:layout_alignTop="@+id/fragment_add_file_file_name_tv"
            android:layout_toRightOf="@+id/fragment_add_file_file_name_tv"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/fragment_add_file_file_image_location"
        style="@style/commen_textview_style"
        android:textSize="@dimen/little"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/fragment_add_file_location"
        style="@style/common_edittext_style"
        android:textSize="@dimen/little"
        android:visibility="gone"/>

    <Button
        android:id="@+id/fragment_add_file_select_image_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="选择上传图片"
        android:textColor="@color/blue"
        android:textSize="@dimen/large"/>

    <Button
        android:id="@+id/fragment_add_file_select_file_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="选择上传文件"
        android:textColor="@color/blue"
        android:textSize="@dimen/large"/>

    <Button
        android:id="@+id/fragment_add_file_deliver_file_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:text="确定"
        android:textColor="@color/shallow_blue"
        android:textSize="@dimen/x_large"/>
</LinearLayout>