<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/upload_file_item_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:src="@mipmap/default_req"/>

    <LinearLayout
        android:id="@+id/upload_file_item_descrition_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/upload_file_item_iv"
        android:layout_toRightOf="@+id/upload_file_item_iv"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/upload_file_item_filename"
            style="@style/up_load_file_item_textview_style"
            android:hint="图书作者:"
            />

        <TextView
            android:id="@+id/upload_file_item_file_author"
            style="@style/up_load_file_item_textview_style"
            android:hint="图书名称:"
            />

        <TextView
            android:id="@+id/upload_file_item_file_image_location"
            style="@style/up_load_file_item_textview_style"
            android:hint="图片位置："/>

        <TextView
            android:id="@+id/upload_file_item_file_location"
            style="@style/up_load_file_item_textview_style"
            android:hint="资源位置:"/>
    </LinearLayout>
</RelativeLayout>