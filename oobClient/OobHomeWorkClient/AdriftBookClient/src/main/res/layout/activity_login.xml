<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.example.adriftbookclient.oobhomeworkclient.LoginActivity">

    <TextView
        android:id="@+id/activity_login_user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="用户名"
        android:textSize="@dimen/large"/>

    <EditText
        android:id="@+id/activity_login_user_name_ev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/activity_login_user_name_tv"
        android:layout_toRightOf="@+id/activity_login_user_name_tv"
        android:hint="用户名至少为两个字符"
        android:textSize="@dimen/large"
        />

    <TextView android:id="@+id/activity_login_password_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/large"
        android:padding="10dp"/>


</RelativeLayout>
